<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".HojeFragment"
             android:background="@color/qb">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="66dp" android:id="@+id/borda-inicio-tela"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Configuração"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Análise" android:textSize="18sp"
                android:textColor="#0c3b4e" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/borda-inicio-tela"
                app:layout_constraintEnd_toEndOf="@+id/borda-inicio-tela" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/borda-inicio-tela" android:fontFamily="@font/montserrat"/>
        <ImageView
                android:src="@color/colorAccent"
                android:layout_width="382dp"
                android:layout_height="462dp"
                android:id="@+id/quadradobranco" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/borda-inicio-tela"
                android:layout_marginTop="12dp" app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.078"/>
        <Switch
                android:text="SENSOR DE VIBRAÇÃO"
                android:layout_width="342dp"
                android:layout_height="27dp"
                android:id="@+id/switch1" android:textColor="#0c3b4e"
                app:layout_constraintTop_toBottomOf="@+id/borda-inicio-tela" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/quadradobranco"
                app:layout_constraintVertical_bias="0.077"
                android:trackTint="@color/verdeescuro" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="RESTAURAR PADRÃO "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" android:textColor="#0c3b4e" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.105"/>
        <ImageView
                android:src="@color/cinzabarra"
                android:layout_width="359dp"
                android:layout_height="0dp"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/switch1" android:layout_marginTop="40dp"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>