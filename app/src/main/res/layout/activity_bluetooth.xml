<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".BluetoothActivity">
    <TextView
            android:layout_width="131dp"
            android:layout_height="126dp"
            android:id="@+id/imageButton6"
            android:text="OFF"
            android:background="#FFF"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="15dp" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="ClickButton2" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton4"/>


    <TextView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:text="ON"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/imageButton4"
            android:background="#FFF"
            android:padding="15dp" android:scaleType="fitCenter"
            android:onClick="ClickButton1"
            android:layout_marginTop="244dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>


</android.support.constraint.ConstraintLayout>